 <form class="login">
    <div class="grid-container">
        <div class="grid-x grid-padding-x">
        <div class="medium-8 large-6 cell">
            <label for="user" class="middle">username:</label>
            <input type="text" id="user" placeholder="username" autocomplete="username" /><br />
        </div>
        </div>
    </div>
    <div class="grid-container">
        <div class="grid-x grid-padding-x">
        <div class="medium-8 large-6 cell">
            <label for="pass" class="middle">password:</label>
            <input type="password" id="pass" placeholder="password" autocomplete="current-password"/><br />
        </div>
        </div>
        <a href="" class="button large" id="submitbtn" class="login">submit</a>
    </div>
</form>

