<h2>Your Posts</h2>
    <ul class="yourPosts text-light">
        {{#each posts as |post|}}
        <li class="post-li bg-dark postWithEdit">
            
            <div class="row editRow">
                <div class="col-10">{{> post-info post }}</div>
                <div class="col-2 editBtn"><a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>    
            </div>
        </li>
        {{/each}}
    </ul>
