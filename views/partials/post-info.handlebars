{{#each post}}
<div class="card cell small-10 large-7 align-spaced">
        <h4 class="card-divider align-center">
        <a href="{{post_url}}">{{title}}</a>
        </h4>
        <div class="card-section text-center">
        <p>
            {{post_content}}
        </p>
        <div class="grid-container">
            <div class="grid-x grid-padding-x">
            <div class=" cell">
                <h5><a href="/allposts/singlepost" class="button">view comments</a></h5>
            </div>
            </div>
        </div>
        </div>
</div>
{{/each}}